<h3>新着一覧</h3>
<ul>
  <% @post.order(updated_at: :desc).first(3).each do |post| %>
  <li>
    <%= link_to post.title, post_path(post) %>
    コメント数(<%= post.comments.count + post.replies.count %>)
  </li>
  <% end %>
</ul>
<h3>スレッド一覧</h3>
<ul>
  <% @post.order(created_at: :desc).each do |post| %>
  <li>
    <%= link_to post.title, post_path(post) %>
    作成者[<%= post.user.username %>]
    コメント数(<%= post.comments.count + post.replies.count %>)
    <!-- ログイン時のみ表示 -->
    <% if user_signed_in? %>
      <% if post.user_id == current_user.id %>
      <%= link_to '[編集]', edit_post_path(post) %>
      <%= link_to '[削除]',
        post_path(post),
        method: :delete,
        data: { confirm: '本当に削除しますか？' } %>
      <% end %>
    <% end %>
  </li>
  <% end %>
</ul>
