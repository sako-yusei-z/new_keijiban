<h2>新規作成</h2>
<%= form_for ([@user, @user.posts.build]) do |f| %>
<h3>タイトル</h3>
<p><%= f.text_field :title, size: "55" %></p>
<h3>内容</h3>
<p>
  <%= f.text_area :body, size: "53x10" %>
  <% if @user.errors.any? %>
  <p class="error">文字数が多すぎるか、空欄があります。</p>
  <% end %>
</p>
<p>
  <%= f.submit "作成" %>
</p>
<% end %>
